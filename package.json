{
  "name": "restify-rest-client",
  "description": "Restify REST client",
  "version": "1.2.0",
  "main": "index.js",
  "author": {
    "name": "Alexey Kucherenko",
    "url": "https://github.com/killmenot"
  },
  "scripts": {
    "lint": "grunt jshint",
    "test": "mocha test/* --recursive",
    "coverage": "nyc --reporter=html --reporter=text mocha test/* --recursive",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "examples/**/*.js"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/killmenot/rest-client.git"
  },
  "keywords": [
    "restify",
    "rest",
    "client"
  ],
  "bugs": {
    "url": "https://github.com/killmenot/rest-client/issues"
  },
  "license": "MIT",
  "dependencies": {
    "hooker": "^0.2.3",
    "restify-clients": "^1.5.2"
  },
  "devDependencies": {
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-jshint": "^1.1.0",
    "load-grunt-tasks": "^3.5.2",
    "mocha": "^5.0.0",
    "nyc": "^11.4.0",
    "pre-commit": "^1.2.2",
    "restify": "^6.3.4",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0"
  }
}
