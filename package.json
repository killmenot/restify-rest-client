{
  "name": "restify-rest-client",
  "description": "Restify REST client",
  "license": "MIT",
  "version": "3.0.0",
  "main": "lib/index.js",
  "files": [
    "lib/**.*"
  ],
  "engines": {
    "node": ">=8"
  },
  "author": {
    "name": "Alexey Kucherenko",
    "url": "https://github.com/killmenot"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "babel src -d lib",
    "eslint": "eslint examples src --fix",
    "remark": "remark .",
    "lint": "npm run eslint && npm run remark",
    "test": "mocha test/* --recursive",
    "coverage": "nyc --reporter=html --reporter=text mocha test/* --recursive",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/killmenot/rest-client.git"
  },
  "keywords": [
    "restify",
    "rest",
    "client"
  ],
  "bugs": {
    "url": "https://github.com/killmenot/rest-client/issues"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "dependencies": {
    "debug": "^4.2.0",
    "hooker": "^0.2.3",
    "restify-clients": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "promise-spread": "^0.1.0",
    "remark-cli": "^9.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "restify": "^8.5.1",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0"
  }
}
